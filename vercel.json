{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", // Обрабатываем API запросы
      "dest": "/app.js"
    },
    {
      "src": "/(.*)", // Все остальные маршруты
      "dest": "/index.html" // Путь к вашему index.html в корне проекта
    }
  ]
}
